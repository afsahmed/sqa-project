{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express auth service with PostgreSQL and Sequelize",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "mocha test/**/*.js --reporter mochawesome --reporter-options reportDir=reports/unit,reportFilename=unit-test,quiet=true",
    "generate-report": "npx mochawesome-merge reports/*.json > reports/merged-output.json && npx mochawesome-report-generator reports/merged-output.json --reportDir reports --reportFilename mocha-report --inline true --inlineAssets true --charts true --overwrite",
    "metrics:report": "node scripts/generateQualityMetrics.js",
    "test:coverage": "nyc mocha ../test/**/*.test.js"
  },
  "keywords": [
    "express",
    "nodejs",
    "sqa",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.104.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sendgrid": "^5.2.3",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "mocha": "^10.8.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "sonar-scanner": "^3.1.0",
    "supertest": "^6.3.3"
  }
}
